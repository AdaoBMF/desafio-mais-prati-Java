package br.com.pessoas.util;

import java.util.Calendar;
/**
 * Classe auxiliar para gerenciar datas
 * 
 * @author Adao Vieira
 *
 */
public class DateManager {
	
	/**
	 * 
	 * @return String data atual
	 */
	public static  String getNow() {
		Calendar today = Calendar.getInstance();
		int year = today.get(Calendar.YEAR);
		int month = (today.get(Calendar.MONTH) + 1);
		int day = today.get(Calendar.DAY_OF_MONTH);
		int hour = today.get(Calendar.HOUR);
		int minut = today.get(Calendar.MINUTE);
		int second = today.get(Calendar.SECOND);
		String dataHoraAtual = String
				.format("%s/%s/%s %s:%s:%s", day, month, year, hour, minut, second);		
		return dataHoraAtual;
	}
	
}
