package br.com.pessoas.util;

import java.text.*;
import java.util.*;

import br.com.pessoas.guiControll.Cli;

/**
 * Classe auxiliar para gerenciar datas
 * 
 * @author Adao Vieira
 *
 */
public class DateManager {
	private static DateFormat day = new SimpleDateFormat("dd/MM/yyyy");
	private static DateFormat dayTime = new SimpleDateFormat("dd/MM/yyyy HH:mm:ss");

	/**
	 * 
	 * @return String data atual
	 */
	public static Date formDate(String entry) {
		Date date = null;
		try {
			date = day.parse(entry);
		} catch (ParseException e) {
			System.out.println(e.toString());
		}
		return date;
	}

	public static Date formDateTime(String entry) {
		Date date = null;
		try {
			date = dayTime.parse(entry);
		} catch (ParseException e) {
			System.out.println(e.toString());
		}
		return date;
	}
	
	private static String inputDay() {
		String day = "";
		Boolean check = true;
		while(day.length() == 0) {
			if
			Cli.showTxt("Digite o dia do mês ");
			Integer entry = Cli.getInt();
			if(entry >= 0 && entry <= 31) {
				day = entry > 10 ? "0"+ entry : day + entry;
			}
		}
	}
	
	
	
	
	
	
	
	
	
	
