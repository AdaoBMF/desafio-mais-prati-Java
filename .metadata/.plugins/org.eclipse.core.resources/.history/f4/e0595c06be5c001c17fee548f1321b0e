package br.com.pessoas.util;

import java.text.*;
import java.time.format.DateTimeParseException;
import java.util.Calendar;
import java.util.Date;
/**
 * Classe auxiliar para gerenciar datas
 * 
 * @author Adao Vieira
 *
 */
public class DateManager {
	private static DateFormat day = new SimpleDateFormat("dd/MM/yyyy");
	private static DateFormat dayTime = new SimpleDateFormat("dd/MM/yyyy HH:mm:ss");
	
	/**
	 * 
	 * @return String data atual
	 */
	public static  Date formDate(String entry) {
		Date date = null;
		try {
			date = day.parse(entry);			
		}catch(ParseException e) {
			System.out.println(e.toString());
		}
		return date;
	}
	
}
